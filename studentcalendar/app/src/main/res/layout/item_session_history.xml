<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <!-- Session Type Indicator -->
    <View
        android:id="@+id/sessionTypeIndicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#6750A4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Session Time -->
    <TextView
        android:id="@+id/sessionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="10:30 AM"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/sessionTypeIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Session Description -->
    <TextView
        android:id="@+id/sessionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:text="Focus Session â€¢ Mathematics"
        android:textColor="#80000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/sessionDuration"
        app:layout_constraintStart_toEndOf="@+id/sessionTypeIndicator"
        app:layout_constraintTop_toBottomOf="@+id/sessionTime" />

    <!-- Session Duration -->
    <TextView
        android:id="@+id/sessionDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 min"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>